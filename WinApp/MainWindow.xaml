<Window x:Class="WinApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinApp.Views"
        xmlns:vst="clr-namespace:Vst.Controls"
        mc:Ignorable="d"
        Title="Nhập giấy phép lái xe" Height="600" Width="400">
    <Grid>
        <vst:MyTemplateForm x:Name="loginForm"
                    Visibility="Collapsed"
                Width="350">
        </vst:MyTemplateForm>
        <Grid x:Name="userForm" 
              Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border Background="{StaticResource BannerBrush}" 
                    BorderThickness="0 1 0 1" 
                    BorderBrush="LightGray">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <local:ScriptToolbar x:Name="ScriptTools" 
                                         Margin="10 0 0 0"
                                         Grid.ColumnSpan="2" />
                    
                    <Border Visibility="Collapsed" 
                            CornerRadius="6" Background="White" Grid.Column="1">
                        <vst:SearchBox x:Name="searchBox" />
                    </Border>
                    <Border Grid.Column="2">
                        <StackPanel x:Name="ActionPanel" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <ScrollViewer 
                                  x:Name="mainContent" 
                                  VerticalScrollBarVisibility="Auto"
                                  Background="WhiteSmoke">

                        </ScrollViewer>
                        <Border Background="WhiteSmoke" 
                                BorderBrush="LightGray"
                                Padding="5"
                                BorderThickness="0 1 0 0"
                                Grid.Row="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Summary" VerticalAlignment="Center">
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Grid>
                    
                    <Border Grid.Column="0" Background="{StaticResource BannerBrush}">

                        <StackPanel>
                            <vst:TabbarItem Source="user" Url="GPLX" Text="danh sách" IsActivated="True" />
                            <vst:TabbarItem Source="tick" Url="GPLX/saved" Text="đã lưu" />
                            <vst:TabbarItem Source="plus" Url="GPLX/add" Text="nhập liệu" />
                        </StackPanel>

                    </Border>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>
