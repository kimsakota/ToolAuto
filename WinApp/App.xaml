<Application x:Class="WinApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WinApp"
             xmlns:vst="clr-namespace:Vst.Controls"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#624cfd</Color>
            <Color x:Key="GrayColor">#CCD5F0</Color>
            <Color x:Key="BannerColor">#ECF9E6</Color>

            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource GrayColor}" />
            <SolidColorBrush x:Key="BannerBrush" Color="{StaticResource BannerColor}" />

            <Style TargetType="vst:TabbarItem">
                <Setter Property="Padding" Value="10" />
            </Style>
            <Style TargetType="vst:HeaderText">
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="Padding" Value="0,10" />
            </Style>
            <Style TargetType="vst:Button">
                <Setter Property="Background" Value="#624BFF" />
                <Setter Property="Foreground" Value="#FFF" />
                <Setter Property="Opacity" Value="0.8" />
                <Setter Property="MinWidth" Value="60" />
                <Setter Property="Margin" Value="2" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="1" />
                    </Trigger>
                </Style.Triggers>

            </Style>
            <Style TargetType="vst:MenuButton">
                <Setter Property="Foreground" Value="#624BFF" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Padding" Value="10 3" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="#FFF" />
                        <Setter Property="Background" Value="#624BFF" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style TargetType="vst:SideMenu">
                <Setter Property="Margin" Value="0 5" />
            </Style>
            <Style TargetType="vst:SideMenuCaption">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Foreground" Value="#6242FF" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Padding" Value="5" />

            </Style>
            <Style TargetType="vst:SideMenuButton">
                <Setter Property="Background" Value="#00624BFF" />
                <Setter Property="Foreground" Value="#624BFF" />
                <Setter Property="FontSize" Value="14" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="#FFF" />
                        <Setter Property="Background" Value="#624bff" />
                        <Setter Property="Opacity" Value="1" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style TargetType="vst:VerticalMenu">
                <Setter Property="Background" Value="#40624BFF" />
                <Setter Property="Padding" Value="20 10" />
            </Style>
            <Style TargetType="vst:TableHeaderCell">
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Background" Value="#111" />
                <Setter Property="Foreground" Value="#FFF" />
                <Setter Property="BorderThickness" Value="0.5" />
                <Setter Property="BorderBrush" Value="#CCC" />
                <Setter Property="Padding" Value="5" />
            </Style>
            <Style TargetType="vst:TableCell">
                <Setter Property="BorderThickness" Value="0.5" />
                <Setter Property="BorderBrush" Value="#CCC" />
                <Setter Property="Padding" Value="5" />
            </Style>
            <Style TargetType="vst:TableView">
                <Setter Property="Background" Value="#FFF" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="RowOverBackground" Value="#40624BFF" />
            </Style>
            <Style TargetType="vst:EditorFrame">
                <Setter Property="Padding" Value="10 7" />
                <Setter Property="BorderRadius" Value="10" />
                <Setter Property="Background" Value="#FFF" />
                <Setter Property="Foreground" Value="#111" />
                <Setter Property="BorderBrush" Value="#CCC" />
                <Style.Triggers>
                    <Trigger Property="Activated" Value="True">
                        <Setter Property="BorderBrush" Value="Orange" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style TargetType="vst:EditorLabel">
                <Setter Property="Margin" Value="6 0" />
                <Setter Property="Foreground" Value="#008CFD" />
            </Style>
            <Style TargetType="vst:EditorPanel">
                <Setter Property="Padding" Value="0 20" />
            </Style>
            <Style TargetType="vst:Placeholder">
                <Setter Property="FontSize" Value="10" />
                <Setter Property="Opacity" Value="0.4" />
            </Style>
            <Style TargetType="vst:FormControl">
                <Setter Property="Padding" Value="5 0 5 20" />
            </Style>
            <Style TargetType="vst:MyTemplateForm">
                <Setter Property="Width" Value="600" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="BorderBrush" Value="{StaticResource GrayBrush}" />
                <Setter Property="BorderRadius" Value="6" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Padding" Value="20 0 20 20" />
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>
