<UserControl x:Class="WinApp.Views.GPLX.GplxItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinApp.Views.GPLX"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White" 
            CornerRadius="6" 
            Margin="10 2.5"
            Padding="10"
            Cursor="Hand"
            BorderThickness="1" 
            BorderBrush="LightGray" >
        <StackPanel>
            <Label FontWeight="Bold" Content="{Binding Path=ObjectId}" Padding="0" />
            <Label Content="{Binding Path=Name}" Padding="0" />
            <Label x:Name="time" Visibility="Collapsed" FontSize="10" Padding="0 5" />
        </StackPanel>  
    </Border>
</UserControl>
