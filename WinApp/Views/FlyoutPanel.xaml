<UserControl x:Class="WinApp.Views.FlyoutPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinApp.Views"
             xmlns:vst="clr-namespace:Vst.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border x:Name="flyoutPanel"
                Width="300"
                Grid.Column="0" 
                Background="{StaticResource PrimaryBrush}">

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel>
                    <vst:HeaderText Text="BK System" HeaderSize="3" Padding="0" Foreground="White" />
                </StackPanel>
            </Grid>

        </Border>
        <Border Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border BorderThickness="0 0 0 0.5" 
                        BorderBrush="{StaticResource GrayBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Width="20" Height="16" Margin="10">
                                <Grid VerticalAlignment="Center" x:Name="flyoutButton" 
                                  Background="White">
                                    <Line X1="0" X2="10" Y1="0" Y2="0" Stroke="Gray"  />
                                    <Line X1="0" X2="10" Y1="5" Y2="5" Stroke="Gray"  />
                                    <Line X1="0" X2="10" Y1="10" Y2="10" Stroke="Gray"  />
                                </Grid>
                            </Viewbox>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Grid.Row="1" x:Name="mainContent"></Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
